<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iyp.cookbook.fragment.MenuOverviewFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/menuImageOverview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:rowCount="2"
            android:columnCount="2"
            >
            <TextView
                android:id="@+id/menuTitleOverview"
                android:text="1"
                android:layout_gravity="center"
                android:layout_columnSpan="2"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/menuTitleMinute"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/menuTitleStar"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
        </GridLayout>
        <TextView
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:id="@+id/menuTitleDesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            android:minLines="3"
            android:maxLines="5"
            android:text="asdasdasdasd asdas da dasd as das da d"
            android:textSize="12dp"
            android:gravity="top"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/overviewStart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/overviewOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
