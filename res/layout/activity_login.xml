<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="iyp.cookbook.Login"
    android:orientation="vertical"
    android:id="@+id/Loginmenu">
    <ImageView
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/title"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/Username"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:drawableBottom="@drawable/username_input"
        android:drawableLeft="@drawable/userprofile"
        android:ems="10"
        android:stateListAnimator="@anim/shake"
        android:includeFontPadding="true"
        android:inputType="textPersonName"

        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Password"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/Password"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:background="#00000000"
        android:drawableBottom="@drawable/username_input"
        android:drawableLeft="@drawable/lockwhite"
        android:ems="10"
        android:stateListAnimator="@anim/shake"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/Login"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/login"
        android:onClick="login"
        android:stateListAnimator="@animator/buttonanim" />
    <TextView
        android:id="@+id/or"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/or" />
    <Button
        android:id="@+id/SignUp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/signupbutton"
        android:onClick="signup"
        android:stateListAnimator="@animator/buttonanim"
        android:drawablePadding="8dp" />



    <TextView
        android:id="@+id/skip"
        android:layout_gravity="center"
        android:layout_width="29dp"
        android:layout_height="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/skip"
        android:clickable="true"
        android:elevation="1dp" />



</LinearLayout>
